{
  "name": "trmnl-go-transit-proxy",
  "version": "1.0.0",
  "description": "High-performance, edge-cached proxy API service for GO Transit (Metrolinx) running on Cloudflare Workers",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "build": "echo 'No build step required for Workers'",
    "test": "echo 'Tests not yet implemented'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "quality": "npm run format:check && npm run lint",
    "preview": "wrangler publish --env development",
    "tail": "wrangler tail",
    "logs": "wrangler tail --env development"
  },
  "keywords": [
    "cloudflare-workers",
    "proxy",
    "caching",
    "go-transit",
    "metrolinx",
    "api",
    "edge-computing"
  ],
  "author": "TRMNL GO Transit Plugin Contributors",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240621.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "wrangler": "^3.48.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hossain-khan/trmnl-go-transit-plugin.git",
    "directory": "cloudflare-worker"
  },
  "bugs": {
    "url": "https://github.com/hossain-khan/trmnl-go-transit-plugin/issues"
  },
  "homepage": "https://github.com/hossain-khan/trmnl-go-transit-plugin#cloudflare-worker"
}
